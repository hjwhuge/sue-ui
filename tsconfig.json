{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
    },
    "lib": [
      "DOM",
      "ES2018"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": "true",
    "include": [
        "./**/*.*",
        "./shims-vue.d.ts", 
        "docs/.vitepress/config.ts",
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/__tests__/**/*",
        "**/*.md"
    ]
}